3.5.1



ALTER TABLE config_ponto DROP COLUMN carga_horaria_online;
ALTER TABLE config_ponto ADD ch_online_diaria time DEFAULT '00:00:00' NOT NULL;
COMMENT ON COLUMN config_ponto.ch_online_diaria IS 'Carga horária online máxima diária'; 
ALTER TABLE "public".ponto ADD horas_registrada time DEFAULT '00:00:00' NOT NULL;
COMMENT ON COLUMN "public".ponto.horas_registrada IS 'Total de horas registradas no ponto'; 
CREATE FUNCTION public.calcula_horas()
    RETURNS trigger
    LANGUAGE 'plpgsql'
    COST 100
    VOLATILE NOT LEAKPROOF
AS $BODY$
BEGIN
  IF NEW.hora_inicial_informado is not null and  new.hora_final_informado is not null THEN 
    NEW.horas_registrada := new.hora_final_informado - new.hora_inicial_informado;
  END IF;
  IF NEW.horas_registrada < '00:00:00' THEN 
    NEW.horas_registrada =  NEW.horas_registrada + '24:00:00';
  END IF;	
  RETURN NEW;
END;
 $BODY$;
CREATE TRIGGER calcula_horas
    BEFORE INSERT OR UPDATE 
    ON public.ponto
    FOR EACH ROW
    EXECUTE PROCEDURE public.calcula_horas(); 
    
    
